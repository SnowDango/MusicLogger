<?xml version="1.0" encoding="utf-8"?>
<com.snowdango.musiclogger.view.item.AlbumView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingVertical="5dp"
		android:paddingStart="5dp"
		android:paddingEnd="2.5dp">
	
	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="5dp">
		
		<com.snowdango.musiclogger.view.model.ArtworkView
				android:id="@+id/albumArtworkView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toBottomOf="parent"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintBottom_toTopOf="@id/albumMetaLinear"/>
		
		<com.snowdango.musiclogger.view.model.AppIconView
				android:id="@+id/albumAppIcon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:layout_constraintLeft_toRightOf="@id/albumArtworkView"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintBottom_toBottomOf="@id/albumArtworkView"/>
		
		<LinearLayout
				android:id="@+id/albumMetaLinear"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toBottomOf="@id/albumArtworkView"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				android:orientation="vertical">
			
			<TextView
					android:id="@+id/albumName"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:scrollHorizontally="true"
					android:maxLines="1"
					android:textAlignment="center"
					android:marqueeRepeatLimit="marquee_forever"
					style="@style/textPrimary"
					android:ellipsize="marquee"/>
			
			<TextView
					android:id="@+id/albumArtist"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:scrollHorizontally="true"
					android:maxLines="1"
					android:textAlignment="center"
					android:marqueeRepeatLimit="marquee_forever"
					style="@style/textPrimary"
					android:ellipsize="marquee"/>
		
		</LinearLayout>
	
	</androidx.constraintlayout.widget.ConstraintLayout>

</com.snowdango.musiclogger.view.item.AlbumView>